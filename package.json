{
  "name": "@farhanbshafiq/dynamic-card",
  "version": "4.0.0",
  "description": "Advanced, framework-agnostic card component with custom colors, gradients, animations, and images. Works everywhere - React, Vue, Angular, or plain HTML",
  "main": "dist/dynamic-card.min.js",
  "module": "src/dynamic-card.js",
  "unpkg": "dist/dynamic-card.min.js",
  "jsdelivr": "dist/dynamic-card.min.js",
  "files": [
    "src/",
    "dist/",
    "examples/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:minify",
    "build:minify": "terser src/dynamic-card.js -o dist/dynamic-card.min.js --compress --mangle --source-map",
    "dev": "http-server -p 8080 -o /examples",
    "prepublishOnly": "npm run build",
    "test": "echo \"Tests coming soon\" && exit 0"
